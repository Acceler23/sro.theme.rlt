{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Orientation": "Vertical",
        "Items": [
            {
                "BlockType": "component",
                "Component": "league_head_cell"
            },
            {
                "BlockType": "stack",
                "Margin": "{MarginRoot}",
                "Orientation": "Vertical",
                "Items": [
                    {
                        "BlockType": "component",
                        "Component": "subheader_tables",
                        "ComponentOptions": {
                            "Vars": {
                                "renderData": "{Season.Name, Converter=StringToUpperString}  STANDINGS STATISTICS  |   {Season.LeagueInfo.LeagueName, Converter=StringToUpperString} DRIVERS",
                            }
                        }
                    },
                    {
                        "BlockType": "component",
                        "Component": "standing_main_head_cell"
                    },
                    {
                        "BlockType": "component",
                        "Component": "head_background_cell"
                    },
                    //table
                    {
                        "Name": "mainTable",
                        "BlockType": "table",
                        "Margin": "{MarginTable}",
                        "Triggers": [
                            {
                                "Trigger": "RenderPages_Trigger"
                            }
                        ],
                        "TableOptions": {
                            "ItemsSource": "{Standings.Teams}",
                            "RowSpacing": 3,
                            "ColSpacing": 3,
                            "HeaderTemplate": {
                                "BlockType": "text",
                                "HorizontalAlignment": "Left",
                                "Style": "table_head_style",
                                "StretchWidth": true
                            },
                            "Columns": [

                                //position
                                {
                                    "Header": "     POS",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "position_cell"
                                    }
                                },
                                {
                                    "Header": "+/-",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "position_jump"
                                    }
                                },
                                //Driver Name
                                {
                                    "Header": "TEAM",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "team_cell"
                                    }
                                },
                                {
                                    "Header": "POINTS",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.Points}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "DIFF",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.PointsToLeaderDiff}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "DISCARDED",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "RenderIf": "{Item.DiscardedPoints, Converter=NumberNotEquals, Parameter=0}",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.DiscardedPoints}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "RACES",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.RacesCount}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "QUALIES",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.QualCount}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "BEST",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.BestPos}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "P1",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.CountP1}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "P2",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.CountP2}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "P3",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.CountP3}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "TOP 3",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.CountTop3}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "TOP 5",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.CountTop5}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "TOP 10",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.CountTop10}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "NC",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.CountDnf}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "DNS",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.CountDns}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "DSQ",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "standings_stats_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "statsData": "{Item.CountNotClassified}"
                                            }
                                        }
                                    }
                                },
                                {
                                    "Header": "",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "fader_cell"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        ]
    }
}