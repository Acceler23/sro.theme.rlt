{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Orientation": "Vertical",
        "Items": [
            {
                "BlockType": "component",
                "Component": "league_head_cell"
            },
            {
                "BlockType": "stack",
                "Orientation": "Vertical",
                "Margin": "{MarginRoot}",
                "Items": [
                    {
                        "BlockType": "component",
                        "Component": "subheader_tables",
                        "ComponentOptions": {
                            "Vars": {
                                "renderData": " {Season.Name, Converter=StringToUpperString}  STANDINGS  |   {Season.LeagueInfo.LeagueName, Converter=StringToUpperString} DRIVERS",
                            }
                        }
                    },
                    {
                        "BlockType": "dock",
                        "Orientation": "Horizontal",
                        "RenderIf": "{ShowTop3Standings}",
                        "MarginBottom": 40,
                        "Width": "*",
                        "Items": [
                            {
                                "BlockType": "itemstack",
                                "HorizontalAlignment": "Left",
                                "ItemStackOptions": {
                                    "ItemSource": "{Standings.Drivers}",
                                    "Limit": 1,
                                    "IndexStart": 0,
                                    "ItemTemplate": {
                                        "BlockType": "component",
                                        "Component": "team_table_top",
                                        "HorizontalAlignment": "Center"
                                    }
                                }
                            },
                            {
                                "BlockType": "itemstack",
                                "HorizontalAlignment": "Center",
                                "ItemStackOptions": {
                                    "ItemSource": "{Standings.Drivers}",
                                    "Limit": 1,
                                    "IndexStart": 1,
                                    "ItemTemplate": {
                                        "BlockType": "component",
                                        "Component": "team_table_top",
                                        "HorizontalAlignment": "Center"
                                    }
                                }
                            },
                            {
                                "BlockType": "itemstack",
                                "HorizontalAlignment": "Right",
                                "ItemStackOptions": {
                                    "ItemSource": "{Standings.Drivers}",
                                    "Limit": 1,
                                    "IndexStart": 2,
                                    "ItemTemplate": {
                                        "BlockType": "component",
                                        "Component": "team_table_top",
                                        "HorizontalAlignment": "Center"
                                    }
                                }
                            }
                        ]
                    },
                    {
                        "BlockType": "component",
                        "Component": "standing_main_head_cell"
                    },
                    {
                        "BlockType": "component",
                        "Component": "head_background_cell"
                    },
                    //table
                    {
                        "Name": "mainTable",
                        "BlockType": "table",
                        "Triggers": [
                            {
                                "Trigger": "RenderPages_Trigger"
                            }
                        ],
                        "TableOptions": {
                            "ItemsSource": "{Standings.Drivers}",
                            "RowSpacing": 3,
                            "ColSpacing": 3,
                            "HeaderTemplate": {
                                "BlockType": "text",
                                "Style": "table_head_style",
                                "Background": "{darkGrey}",
                                "Foreground": "{BackgroundDefault}",
                                "HorizontalAlignment": "Center"
                            },
                            "Columns": [
                                //position
                                {
                                    "Header": "     POS",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "position_cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "position": "{Item.PositionString}"
                                            }
                                        }
                                    }
                                },
                                //Driver Name
                                {
                                    "Header": "DRIVER",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "driver_cell"
                                    }
                                },
                                //Total
                                {
                                    "Header": "TOTAL",
                                    "Template": {
                                        "BlockType": "stack",
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Source": "{Item.Points.StringValue}",
                                                "Background": "{BackgroundDefault}",
                                                "Height": "*",
                                                "Width": 82,
                                                "Padding": "{PaddingDefault}",
                                                "TextOptions": {
                                                    "HorizontalAlignment": "Center",
                                                    "VerticalAlignment": "Center"
                                                },
                                                "Triggers": [
                                                    {
                                                        "Trigger": "DarkerBackground"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                },
                                {
                                    "Header": "Poles",
                                    "Template": {
                                        "BlockType": "text",
                                        "Source": "{Item.CountQualP1}",
                                        "HorizontalAlignment": "Center",
                                        "Background": "{BackgroundDefault}",
                                        "Width": "*",
                                        "Height": "*",
                                        "Triggers": [
                                            {
                                                "Condition": "{Item.Index, Converter=NumberIsOdd}",
                                                "Property": "Background",
                                                "Value": "{darkWhite}"
                                            }
                                        ]
                                    }
                                },
                                {
                                    "MultiColumnHeadersSource": "{Standings.Events}",
                                    "MultiColumnItemsSource": "{Item.Events}",
                                    "MultiColumnHeaderTemplate": {
                                        "BlockType": "stack",
                                        "Orientation": "Vertical",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Source": "R{Item.Position}",
                                                "HorizontalAlignment": "Center",
                                                "PaddingTop": 5,
                                                "Foreground": "{BackgroundDefault}"
                                            },
                                            {
                                                "BlockType": "text",
                                                "Source": "{Item.Track.Name}",
                                                "PaddingTop": 5,
                                                "Foreground": "{BackgroundDefault}"
                                            }
                                        ]
                                    },
                                    "Template": {
                                        "BlockType": "text",
                                        "Source": "{Item.PointsString}",
                                        "HorizontalAlignment": "Center",
                                        "Background": "{BackgroundDefault}",
                                        "Width": 80,
                                        "Triggers": [
                                            {
                                                "Condition": "{Item.Index, Converter=NumberIsOdd}",
                                                "Property": "Background",
                                                "Value": "{darkWhite}"
                                            }
                                        ]
                                    }
                                },
                                {
                                    "Header": "",
                                    "Template": {
                                        "BlockType": "component",
                                        "Component": "fader_cell"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        ]
    }
}