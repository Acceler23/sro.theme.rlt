{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Orientation": "Vertical",
        "Items": [
            {
                "BlockType": "component",
                "Component": "league_head_cell"
            },
            {
                "BlockType": "stack",
                "Orientation": "Vertical",
                "Margin": "{MarginRoot}",
                "Items": [
                    {
                        "BlockType": "component",
                        "Component": "subheader_linups",
                        "ComponentOptions": {
                            "Vars": {
                                "renderData": "{Season.Name, Converter=StringToUpperString}  |  TEAMS"
                            }
                        }
                    },
                    {
                        "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Teams}",
                        "BlockType": "itemstack",
                        "Width": "*",
                        "Spacing": 20,
                        "Orientation": "Vertical",
                        "Triggers": [
                            {
                                "Trigger": "RenderPages_Trigger_itemstack"
                            }
                        ],
                        "ItemStackOptions": {
                            "ItemSource": "{Lineups.Teams}",
                            "ItemTemplate": {
                                "BlockType": "stack",
                                "Width": "*",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "Orientation": "Vertical",
                                "Background": "#80ffffff",
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "Orientation": "Vertical",
                                        "Items": [
                                            {
                                                "BlockType": "component",
                                                "Component": "ln_driver_team"
                                            }
                                        ]
                                    }
                                ]


                            }
                        }
                    },
                    {
                        "BlockType": "stack",
                        "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Cars}",
                        "Orientation": "Horizontal",
                        "Padding": "0,0,0,20",
                        "Items": [
                            {
                                "BlockType": "itemstack",
                                "Orientation": "Vertical",
                                "ItemStackOptions": {
                                    "CollectionPart": "1/4",
                                    "ItemSource": "{Lineups.Lineups}",
                                    "ItemTemplate": {
                                        "BlockType": "component",
                                        "Component": "driver_card"
                                    }
                                }
                            },
                            {
                                "BlockType": "itemstack",
                                "Orientation": "Vertical",
                                "MarginLeft": 30,
                                "ItemStackOptions": {
                                    "CollectionPart": "2/4",
                                    "ItemSource": "{Lineups.Lineups}",
                                    "ItemTemplate": {
                                        "BlockType": "component",
                                        "Component": "driver_card"
                                    }
                                }
                            },
                            {
                                "BlockType": "itemstack",
                                "Orientation": "Vertical",
                                "MarginLeft": 30,
                                "ItemStackOptions": {
                                    "CollectionPart": "3/4",
                                    "ItemSource": "{Lineups.Lineups}",
                                    "ItemTemplate": {
                                        "BlockType": "component",
                                        "Component": "driver_card"
                                    }
                                }
                            },
                            {
                                "BlockType": "itemstack",
                                "Orientation": "Vertical",
                                "MarginLeft": 30,
                                "ItemStackOptions": {
                                    "CollectionPart": "4/4",
                                    "ItemSource": "{Lineups.Lineups}",
                                    "ItemTemplate": {
                                        "BlockType": "component",
                                        "Component": "driver_card"
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    }
}