{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            {
                "BlockType": "component",
                "Component": "league_head_cell"
            },
            {
                "BlockType": "stack",
                "Orientation": "Horizontal",
                "Padding": "{PaddingDefault}",
                "HorizontalAlignment": "Left",
                "MarginBottom": 10,
                "Items": [
                    {
                        "BlockType": "stack",
                        "Items": [
                            {
                                "BlockType": "text",
                                "Source": ">",
                                "FontSize": 24,
                                "Foreground": "{HeadMain}",
                                "PaddingTop": 5
                            },
                            {
                                "BlockType": "text",
                                "HorizontalAlignment": "Right",
                                "PaddingTop": 5,
                                "Source": " {Season.Name}  |  Teams",
                                "FontSize": 24,
                                "Triggers": [
                                    {
                                        "Condition": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Cars}",
                                        "Property": "Source",
                                        "Value": " {Season.Name}  |  Lineup"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "BlockType": "stack",
                "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Teams}",
                "Padding": "0,0,0,20",
                "Orientation": "Horizontal",
                "Items": [
                    {
                        "BlockType": "itemstack",
                        "Orientation": "Vertical",
                        "Triggers": [
                            {
                                "Trigger": "RenderPages_Trigger_itemstack"
                            }
                        ],
                        "ItemStackOptions": {
                            "ItemSource": "{Lineups.Teams}",
                            "ItemTemplate": {
                                "BlockType": "stack",
                                "Orientation": "Horizontal",
                                "VerticalAlignment": "Center",
                                "PaddingBottom": 20,
                                "Items": [
                                    //team
                                    {
                                        "BlockType": "stack",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "Orientation": "Vertical",
                                        "Background": "{BackgroundDarker}",
                                        "Padding": "20",
                                        "Items": [
                                            {
                                                "BlockType": "stack",
                                                "Orientation": "Vertical",
                                                "Items": [
                                                    {
                                                        "BlockType": "component",
                                                        "Component": "ln_driver_team"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        }
                    }
                ]
            },
            {
                "BlockType": "stack",
                "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Cars}",
                "Orientation": "Horizontal",
                "Padding": "0,0,0,20",
                "Items": [
                    {
                        "BlockType": "itemstack",
                        "Orientation": "Vertical",
                        "ItemStackOptions": {
                            "CollectionPart": "1/4",
                            "ItemSource": "{Lineups.Lineups}",
                            "ItemTemplate": {
                                "BlockType": "component",
                                "Component": "driver_card",
                                "PaddingBottom": 10
                            }
                        }
                    },
                    {
                        "BlockType": "itemstack",
                        "Orientation": "Vertical",
                        "MarginLeft": 30,
                        "ItemStackOptions": {
                            "CollectionPart": "2/4",
                            "ItemSource": "{Lineups.Lineups}",
                            "ItemTemplate": {
                                "BlockType": "component",
                                "Component": "driver_card",
                                "PaddingBottom": 10
                            }
                        }
                    },
                    {
                        "BlockType": "itemstack",
                        "Orientation": "Vertical",
                        "MarginLeft": 30,
                        "ItemStackOptions": {
                            "CollectionPart": "3/4",
                            "ItemSource": "{Lineups.Lineups}",
                            "ItemTemplate": {
                                "BlockType": "component",
                                "Component": "driver_card",
                                "PaddingBottom": 10
                            }
                        }
                    },
                    {
                        "BlockType": "itemstack",
                        "Orientation": "Vertical",
                        "MarginLeft": 30,
                        "ItemStackOptions": {
                            "CollectionPart": "4/4",
                            "ItemSource": "{Lineups.Lineups}",
                            "ItemTemplate": {
                                "BlockType": "component",
                                "Component": "driver_card",
                                "PaddingBottom": 10
                            }
                        }
                    }
                ]

            }
        ]
    }
}