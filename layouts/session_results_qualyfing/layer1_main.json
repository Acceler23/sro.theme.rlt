{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            {
                "BlockType": "component",
                "Component": "session_header"
            },
            {
                "BlockType": "component",
                "Component": "main_head_cell"
            },
            {
                "BlockType": "component",
                "Component": "head_background_cell"
            },
            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Session.Drivers}",
                    "RowSpacing": 3,
                    "ColSpacing": 0,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "Style": "table_head_style",
                        "HorizontalAlignment": "Left"
                    },
                    "Columns": [
                        //position
                        {
                            "Header": "          POS",
                            "Template": {
                                "BlockType": "component",
                                "Component": "position_cell",
                                "ComponentOptions": {
                                    "Vars": {
                                        "position": "{Item.PositionString}"
                                    }
                                }
                            }
                        },
                        //Car Number
                        {
                            "Header": "  CAR #",
                            "Template": {
                                "BlockType": "component",
                                "Component": "number_cell"
                            }
                        },
                        //Class
                        {
                            "Header": "   CLASS",
                            "Template": {
                                "BlockType": "component",
                                "Component": "class_cell"
                            }
                        },
                        //Driver Name
                        {
                            "Header": "  DRIVERS",
                            "Template": {
                                "BlockType": "component",
                                "Component": "driver_cell"
                            }
                        },
                        //Team
                        {
                            "Header": "  TEAM",
                            "Template": {
                                "BlockType": "component",
                                "Component": "team_cell"
                            }
                        },
                        {
                            "Header": "CAR",
                            "Template": {
                                "BlockType": "component",
                                "Component": "car_cell"
                            }
                        },
                        //Fastest Lap
                        {
                            "Header": "     TIME",
                            "Template": {
                                "BlockType": "dock",
                                "Background": "{BackgroundDefault}",
                                "Triggers": [
                                    {
                                        "Condition": "{Item.Index, Converter=NumberIsOdd}",
                                        "Property": "Background",
                                        "Value": "{BackgroundDarker}"
                                    }
                                ],
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "HorizontalAlignment": "Left",
                                        "VerticalAlignment": "Center",
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Source": "{Item.AbsoluteTime}",
                                                "Padding": "16,0,16,0"
                                            }
                                        ]
                                    }
                                ]
                            }
                        },
                        {
                            "Header": "     GAP",
                            "Template": {
                                "BlockType": "dock",
                                "Background": "{BackgroundDefault}",
                                "Triggers": [
                                    {
                                        "Condition": "{Item.Index, Converter=NumberIsOdd}",
                                        "Property": "Background",
                                        "Value": "{BackgroundDarker}"
                                    }
                                ],
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "HorizontalAlignment": "Left",
                                        "VerticalAlignment": "Center",
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Source": "{Item.Time}",
                                                "Padding": "16,0,16,0",
                                                "Triggers": [
                                                    {
                                                        "Condition": "{Item.Index, Converter=NumberEquals, Parameter=0}",
                                                        "Property": "Source",
                                                        "Value": ""
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
}