{
    "ComponentName": "current_event",
    "BlockType": "canvas",
    "Width": 1420,
    "Height": 383,
    "Items": [
        {
            "BlockType": "dock",
            "PositionX": 0,
            "PositionY": 0,
            "Width": 1420,
            "Height": 383,
            "Items": [
                {
                    "BlockType": "image",
                    "Source": "{Item.Track.Nation.LogotypePath}",
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Center",
                    "Width": 1420
                }
            ]
        },
        {
            "BlockType": "dock",
            "PositionX": 0,
            "PositionY": 0,
            "Width": 1420,
            "Height": 383,
            "Items": [
                {
                    "BlockType": "image",
                    "Source": "{CustomTrackImage}",
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Center",
                    "Width": 1420
                }
            ]
        },
        {
            "BlockType": "dock",
            "Orientation": "Horizontal",
            "PositionX": 40,
            "PositionY": 0,
            "Height": 100,
            "Items": [
                {
                    "BlockType": "dock",
                    "Orientation": "Horizontal",
                    "HorizontalAlignment": "Left",
                    "Items": [
                        {
                            "BlockType": "stack",
                            "Orientation": "Vertical",
                            "Padding": "10,15",
                            "Background": "{red}",
                            "Height": 100,
                            "MaxWidth": 132,
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Center",
                                    "Source": "{Item.Date, Converter=DateToDayOfMonth}",
                                    "FontSize": 28,
                                    "Foreground": "{BackgroundDefault}",
                                    "PaddingTop": 5
                                },
                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Center",
                                    "Source": "{Item.Date, Converter=DateCustomFormat, Parameter=MMM}",
                                    "FontSize": 14,
                                    "Foreground": "{BackgroundDefault}",
                                    "PaddingTop": 5
                                },
                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Center",
                                    "Source": "{Item.Date, Converter=DateToYear}",
                                    "FontSize": 14,
                                    "Foreground": "{BackgroundDefault}",
                                    "PaddingTop": 5
                                }
                            ]
                        }
                    ]
                },
                {
                    "BlockType": "image",
                    "Source": "{TrackLayout}",
                    "Padding": "10",
                    "Height": 80,
                    "HorizontalAlignment": "Right",
                    "VerticalAlignment": "Center",
                    "Colorize": {
                        "Color": "{white}"
                    }
                }
            ]
        },
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "VerticalAlignment": "Bottom",
            "PositionX": 40,
            "PositionY": 100,
            "Padding": "40,36",
            "ColorizeBackground": {
                "ColorBlendingMode": "Normal",
                "BlendPercentage": 50,
                "AlphaCompositionMode": "DestAtop",
                "Color": "{black}"
            },
            "Items": [
                {
                    "BlockType": "text",
                    "Source": "{Item.Track.CircuitName, Converter=StringToUpperString}",
                    "HorizontalAlignment": "Left",
                    "FontSize": 32,
                    "PaddingTop": 5,
                    "Foreground": "{BackgroundDefault}"
                },
                {
                    "BlockType": "stack",
                    "Orientation": "Horizontal",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Source": "{Item.Track.CountryName}",
                            "HorizontalAlignment": "Left",
                            "PaddingTop": 5,
                            "FontSize": 22,
                            "Foreground": "{white}"
                        },
                        {
                            "BlockType": "image",
                            "MarginLeft": 3,
                            "Height": 24,
                            "MarginTop": -2,
                            "ImageOptions": {
                                "Path": "{Item.Track.Nation.LogotypePath}"
                            }
                        }
                    ]
                },
                {
                    "BlockType": "text",
                    "Source": "Round  {Item.Position}",
                    "PaddingTop": 25,
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Left",
                    "FontSize": 18,
                    "Foreground": "{lightdarkGrey}"
                },
                {
                    "BlockType": "text",
                    "Source": "{Season.LeagueInfo.LeagueFullName}",
                    "PaddingTop": 6,
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Left",
                    "FontSize": 18,
                    "Foreground": "{lightdarkGrey}"
                },
                {
                    "BlockType": "stack",
                    "PaddingTop": 25,
                    "Orientation": "Horizontal",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Source": "{Item.Track.CircuitFullName, Converter=TruncateString, Parameter=40}",
                            "PaddingTop": 5,
                            "Padding": "20",
                            "HorizontalAlignment": "Left",
                            "FontSize": 14,
                            "Foreground": "{BackgroundDefault}",
                            "Background": "{darkGrey}",
                            "Orientation": "Horizontal"
                        },
                        {
                            "BlockType": "text",
                            "Source": "> {Item.Track.Description}",
                            "HorizontalAlignment": "Left",
                            "Padding": "20",
                            "PaddingTop": 5,
                            "FontSize": 14,
                            "Foreground": "{BackgroundDefault}",
                            "Background": "{red}",
                            "Orientation": "Horizontal"
                        }
                    ]
                }
            ]
        }
    ]
}