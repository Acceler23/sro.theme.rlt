{
    "ComponentName": "current_event",
    "BlockType": "stack",
    "Orientation": "Vertical",
    "Width": 1420,
    "Height": 400,
    "HorizontalAlignment": "Center",
    "BackgroundImage": "bg_dark",
    "UseBackgroundCrop": true,
    "Triggers": [
        {
            "Condition": "{CustomImage}",
            "Property": "BackgroundImage",
            "Value": "track_images/{Item.Track.CircuitName}.png"
        }
    ],
    "Items": [
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Top",
            "Background": "{HeadMain}",
            "MarginLeft": 40,
            "Height": 100,
            "Width": 70,
            "Items": [
                {
                    "BlockType": "text",
                    "HorizontalAlignment": "Center",
                    "Source": "{Item.Date, Converter=DateToDayOfMonth}",
                    "FontSize": 28,
                    "Foreground": "{BackgroundDefault}",
                    "Padding": "15,15,15,10"
                },
                {
                    "BlockType": "text",
                    "HorizontalAlignment": "Center",
                    "Source": "{Item.Date, Converter=DateToMonthInWords}",
                    "FontSize": 14,
                    "Foreground": "{BackgroundDefault}",
                    "Padding": "15,0,15,0",
                    "MarginTop": -8
                },
                {
                    "BlockType": "text",
                    "HorizontalAlignment": "Center",
                    "Source": "{Item.Date, Converter=DateToYear}",
                    "FontSize": 14,
                    "Foreground": "{BackgroundDefault}",
                    "Padding": "15, 12, 15,0"
                },
                {
                    "BlockType": "image",
                    "Source": "{Season.Track.LogotypePath}"
                }
            ]
        },
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "VerticalAlignment": "Bottom",
            "PaddingTop": 5,
            "MarginTop": 40,
            "ColorizeBackground": {
                "ColorBlendingMode": "Normal",
                "BlendPercentage": 50,
                "AlphaCompositionMode": "DestAtop",
                "Color": "#000000"
            },
            "Items": [
                {
                    "BlockType": "text",
                    "Source": "{Item.Track.CircuitName}",
                    "HorizontalAlignment": "Left",
                    "FontSize": 32,
                    "Foreground": "{BackgroundDefault}",
                    "Padding": "40,0,40,0"
                },
                {
                    "BlockType": "stack",
                    "Orientation": "Horizontal",
                    "Padding": "40,5,40,0",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Source": "{Item.Track.CountryName}Â­",
                            "HorizontalAlignment": "Left",
                            "PaddingTop": 5,
                            "FontSize": 22,
                            "Foreground": "#FFFFFF"
                        },
                        {
                            "BlockType": "image",
                            "Height": 24,
                            "MarginTop": -2,
                            "ImageOptions": {
                                "Path": "{Item.Track.Nation.LogotypePath}"
                            }
                        }
                    ]
                },
                {
                    "BlockType": "text",
                    "Source": "Round  {Item.Position}",
                    "Padding": "40,25,40,0",
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Left",
                    "FontSize": 18,
                    "Foreground": "#B3B3B3"
                },
                {
                    "BlockType": "text",
                    "Source": "{Season.LeagueInfo.LeagueFullName}",
                    "Padding": "40,0,40,0",
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Left",
                    "FontSize": 18,
                    "Foreground": "#B3B3B3"
                },
                {
                    "BlockType": "stack",
                    "Orientation": "Horizontal",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Source": "{Item.Track.CircuitFullName, Converter=TruncateString, Parameter=40}",
                            "HorizontalAlignment": "Left",
                            "MarginTop": 25,
                            "Padding": "10,0,10,0",
                            "MarginLeft": 40,
                            "Width": 320,
                            "Height": 46,
                            "FontSize": 14,
                            "Foreground": "{BackgroundDefault}",
                            "Background": "#3e3f40",
                            "Orientation": "Horizontal"
                        },
                        {
                            "BlockType": "text",
                            "Source": "{Item.Track.Description}",
                            "HorizontalAlignment": "Left",
                            "MarginTop": 25,
                            "Padding": "10,0,40,0",
                            "MarginLeft": 10,
                            "Width": "*",
                            "Height": 46,
                            "FontSize": 14,
                            "Foreground": "{BackgroundDefault}",
                            "Background": "#3e3f40",
                            "Orientation": "Horizontal"
                        }
                    ]
                }
            ]
        }
    ]
}