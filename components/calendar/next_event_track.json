{
    "ComponentName": "next_event_track",
    "BlockType": "canvas",
    "BackgroundImage": "bg_dark_mini",
    "RenderIf": false,
    "Triggers": [
        {
            "Condition": "{{Item.Position, Converter=NumberSubtract, Parameter={Season.SeasonCurrentNumberEvent}}, Converter=StringNotEquals, Parameter=1}",
            "ConditionAnd": "{Item.CompletedStatus, Converter=StringEquals, Parameter=InFuture}",
            "Property": "RenderIf",
            "Value": true
        }
    ],
    "Width": 335,
    "Height": 400,
    "Items": [
        //Flag
        {
            "BlockType": "canvas",
            "Orientation": "Vertical",
            "PositionX": 0,
            "PositionY": 0,
            "Items": [
                {
                    "BlockType": "dock",
                    "Orientation": "Vertical",
                    "Height": 140,
                    "Width": 335,
                    "PositionX": 0,
                    "PositionY": 0,
                    "Items": [
                        {
                            "BlockType": "image",
                            "Source": "{Item.Track.Nation.LogotypePath}",
                            "VerticalAlignment": "Center",
                            "HorizontalAlignment": "Center",
                            "PositionX": 0,
                            "PositionY": -95,
                            "Width": 335
                        }
                    ]
                },
                {
                    "BlockType": "dock",
                    "Orientation": "Vertical",
                    "Height": 140,
                    "Width": 335,
                    "PositionX": 0,
                    "PositionY": 0,
                    "Items": [
                        {
                            "BlockType": "image",
                            "Source": "{CustomTrackImage}",
                            "VerticalAlignment": "Center",
                            "HorizontalAlignment": "Center",
                            "Width": 335
                        }
                    ]
                }
            ]

        },
        //Date
        {
            "BlockType": "dock",
            "Orientation": "Horizontal",
            "PositionX": 40,
            "PositionY": 95,
            "Height": 100,
            "Items": [
                {
                    "BlockType": "dock",
                    "Orientation": "Horizontal",
                    "HorizontalAlignment": "Left",
                    "Items": [
                        {
                            "BlockType": "stack",
                            "Orientation": "Vertical",
                            "Padding": "10,15",
                            "Background": "{red}",
                            "Height": 100,
                            "MaxWidth": 132,
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Center",
                                    "Source": "{Item.Date, Converter=DateToDayOfMonth}",
                                    "FontSize": 28,
                                    "Foreground": "{BackgroundDefault}",
                                    "PaddingTop": 5
                                },
                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Center",
                                    "Source": "{Item.Date, Converter=DateCustomFormat, Parameter=MMM}",
                                    "FontSize": 14,
                                    "Foreground": "{BackgroundDefault}",
                                    "PaddingTop": 5
                                },
                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Center",
                                    "Source": "{Item.Date, Converter=DateToYear}",
                                    "FontSize": 14,
                                    "Foreground": "{BackgroundDefault}",
                                    "PaddingTop": 5
                                }
                            ]
                        }
                    ]
                },
                {
                    "BlockType": "image",
                    "Source": "{TrackLayout}",
                    "Padding": "10",
                    "Height": 80,
                    "HorizontalAlignment": "Right",
                    "VerticalAlignment": "Center",
                    "Colorize": {
                        "Color": "{white}"
                    }
                }
            ]
        },
        //Track Info
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Height": 196,
            "Width": 335,
            "PositionX": 0,
            "PositionY": 185,
            "Padding": "40,36",
            "Items": [
                {
                    "BlockType": "text",
                    "Source": "{Item.Track.CircuitName, Converter=StringToUpperString}",
                    "HorizontalAlignment": "Left",
                    "Width": 290,
                    "FontSize": 20,
                    "Foreground": "{BackgroundDefault}",
                    "PaddingTop": 5,
                    "TextOptions": {
                        "Wrap": true
                    }
                },
                {
                    "BlockType": "stack",
                    "PaddingTop": 10,
                    "Orientation": "Horizontal",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Source": "{Item.Track.CountryName}",
                            "HorizontalAlignment": "Left",
                            "PaddingTop": 5,
                            "FontSize": 14,
                            "Foreground": "{lightdarkGrey}"
                        },
                        {
                            "BlockType": "image",
                            "Height": 20,
    "MaxHeight": 72,
                            "MarginLeft": 3,
                            "MarginTop": -2,
                            "ImageOptions": {
                                "Path": "{Item.Track.Nation.LogotypePath}"
                            }
                        }
                    ]
                },
                {
                    "BlockType": "text",
                    "Source": "Round  {Item.Position}",
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Left",
                    "PaddingTop": 5,
                    "FontSize": 14,
                    "Foreground": "{lightdarkGrey}"
                },
                {
                    "BlockType": "text",
                    "Source": "{Season.LeagueInfo.LeagueFullName}",
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Left",
                    "PaddingTop": 5,
                    "FontSize": 14,
                    "Foreground": "{lightdarkGrey}"
                }
            ]
        },
        {
            "BlockType": "text",
            "PositionX": 0,
            "PositionY": 340,
            "Source": "{Item.Track.CircuitFullName, Converter=TruncateString, Parameter=40}",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Center",
            "Height": 61,
            "Width": 335,
            "Foreground": "{BackgroundDefault}",
            "Background": "{darkGrey}",
            "Orientation": "Horizontal",
            "PaddingLeft": 40
        }
    ]
}