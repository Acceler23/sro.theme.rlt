{
    "ComponentName": "team_table_top",
    "BlockType": "dock",
    "Margin": "10",
    "Width": 453,
    "Height": 205,
    "HorizontalAlignment": "Center",
    "Orientation": "Vertical",
    "Items": [
        {
            "BlockType": "dock",
            "BackgroundImage": "podium_bg",
            "VerticalAlignment": "Top",
            "Height": 100,
            "Items": [
                {
                    "BlockType": "stack",
                    "Orientation": "Horizontal",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Bottom",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Source": "{Item.Position}",
                            "VerticalAlignment": "Bottom",
                            "Foreground": "{BackgroundDefault}",
                            "Padding": "0,10,0,10",
                            "FontSize": 60,
                            "FontName": "{FontNameWide}"
                        },
                        {
                            "BlockType": "text",
                            "Source": "st",
                            "VerticalAlignment": "Bottom",
                            "Foreground": "{BackgroundDefault}",
                            "Padding": "0,10,0,35",
                            "FontSize": 18,
                            "FontName": "{FontNameWide}",
                            "Triggers": [
                                {
                                    "Condition": "{Item.Position, Converter=NumberEquals, Parameter=2}",
                                    "Property": "Source",
                                    "Value": "nd"
                                },
                                {
                                    "Condition": "{Item.Position, Converter=NumberEquals, Parameter=3}",
                                    "Property": "Source",
                                    "Value": "rd"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "BlockType": "canvas",
            "Height": 100,
            "Width": 453,
            "Orientation": "Horizontal",
            "VerticalAlignment": "Bottom",
            "Items": [
                {
                    "BlockType": "canvas",
                    "PositionZ": 2,
                    "Height": 100,
                    "Width": 80,
                    "BackgroundImage": "bg_lineup",
                    "ColorizeBackground": {
                        "Color": "{black}",
                        "BlendPercentage": 100,
                        "ColorBlendingMode": "Normal",
                        "Enabled": false
                    },
                    "Triggers": [
                        {
                            "Condition": "{Item.Driver.LogotypePath, Converter=EmptyObjectToTrue}",
                            "Property": "Width",
                            "Value": 100
                        },
                        {
                            "Condition": "{Item.Driver.LogotypePath, Converter=EmptyObjectToFalse}",
                            "Property": "ColorizeBackground.Enabled",
                            "Value": true
                        }
                    ],
                    "Items": [
                        {
                            "BlockType": "dock",
                            "RenderIf": false,
                            "Height": 100,
                            "Width": 100,
                            "Triggers": [
                                {
                                    "Condition": "{Item.Driver.LogotypePath, Converter=EmptyObjectToTrue}",
                                    "ConditionAnd": "{Item.Team.LogotypePath, Converter=EmptyObjectToTrue}",
                                    "Property": "RenderIf",
                                    "Value": true
                                }
                            ],
                            "Items": [
                                {
                                    "BlockType": "image",
                                    "Source": "{Item.Team.Car.Vendor.LogotypePath}",
                                    "Height": 90,
                                    "VerticalAlignment": "Center",
                                    "HorizontalAlignment": "Center",
                                    "Triggers": [
                                        {
                                            "Condition": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Cars}",
                                            "Property": "Source",
                                            "Value": "{Item.Car.Vendor.LogotypePath}"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "BlockType": "dock",
                            "RenderIf": false,
                            "Height": 100,
                            "Width": 100,
                            "Triggers": [
                                {
                                    "Condition": "{Item.Driver.LogotypePath, Converter=EmptyObjectToTrue}",
                                    "Property": "RenderIf",
                                    "Value": true

                                }
                            ],
                            "Items": [
                                {
                                    "BlockType": "image",
                                    "Source": "{Item.Team.LogotypePath}",
                                    "Height": 100,
                                    "VerticalAlignment": "Center",
                                    "HorizontalAlignment": "Center"
                                }
                            ]
                        },
                        {
                            "BlockType": "dock",
                            "Height": 100,
                            "Width": 80,
                            "Items": [
                                {
                                    "BlockType": "image",
                                    "Source": "{Item.Driver.LogotypePath}",
                                    "PaddingTop": 10,
                                    "Height": 200,
                                    "VerticalAlignment": "Top",
                                    "HorizontalAlignment": "Center"
                                }
                            ]
                        },
                        {
                            "BlockType": "image",
                            "Source": "bg_lineup_hide",
                            "Height": 100,
                            "Width": 80,
                            "Triggers": [
                                {
                                    "Condition": "{Item.Driver.LogotypePath, Converter=EmptyObjectToTrue}",
                                    "Property": "Width",
                                    "Value": 100
                                }
                            ]
                        }
                    ]
                },
                {
                    "BlockType": "dock",
                    "PositionZ": 1,
                    "PositionX": 50,
                    "Height": 100,
                    "Width": 405,
                    "BackgroundImage": "podium_bg",
                    "ColorizeBackground": {
                        "Color": "{white}"
                    },
                    "Orientation": "Vertical",
                    "Items": [
                        {
                            "BlockType": "text",
                            //"Background": "{BackgroundDefault}",
                            "Source": "{Item.Driver.Name}",
                            "Padding": "45,15,20,15",
                            "VerticalAlignment": "Center",
                            "HorizontalAlignment": "Left",
                            "Width": 365,
                            "FontSize": 18,
                            "Triggers": [
                                {
                                    "Condition": "{Item.Driver.LogotypePath, Converter=EmptyObjectToTrue}",
                                    "Property": "Padding",
                                    "Value": "65,15,20,15"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}