{
    "ComponentName": "driver_card",
    "BlockType": "stack",
    "Items": [
        //number
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Background": "{HeadMain}",
            "RenderIf": "{ShowDriverNumber}",
            "Triggers": [
                {
                    "Condition": "{TeamSameNumber}",
                    "Property": "RenderIf",
                    "Value": "{Item.SeatPosition, Converter=NumberIsOdd}"
                }
            ],
            "Height": 125,
            "Width": 110,
            "VerticalAlignment": "Center",
            "Items": [
                {
                    "BlockType": "text",
                    "Source": "Car",
                    "Foreground": "{BackgroundDefault}",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "FontSize": 22,
                    "MarginTop": 20,
                    "PaddingTop": 15
                },
                {
                    "BlockType": "text",
                    "Source": "{Item.Driver.RaceNumber}",
                    "Foreground": "{BackgroundDefault}",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "FontSize": 46,
                    "PaddingTop": 5
                }
            ]
        },
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Background": "{HeadSecond}",
            "VerticalAlignment": "Center",
            "Height": 125,
            "Width": 215,
            "Items": [
                {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "PaddingTop": 35,
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Center",
                    "Height": 67,
                    "Items": [
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Source": "{Season.LeagueInfo.LeagueName}",
                            "Foreground": "{BackgroundDefault}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 16
                        },
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Source": "",
                            "Foreground": "{BackgroundDefault}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 16,
                            "Triggers": [
                                {
                                    "Condition": "{ShowDriverClass, Converter=StringEquals, Parameter=LeagueRoles}",
                                    "Property": "Source",
                                    "Value": "{Season.MainLeagueCategory.Name}"
                                },
                                {
                                    "Condition": "{ShowDriverClass, Converter=StringEquals, Parameter=DriverFeatures}",
                                    "Property": "Source",
                                    "Value": "{Item.Driver.PrimaryDriverFeature.Name}"
                                },
                                {
                                    "Condition": "{ShowDriverClass, Converter=StringEquals, Parameter=TextBadge}",
                                    "Property": "Source",
                                    "Value": "{Item.Driver.BadgeText}"
                                }
                            ],
                            "HorizontalAlignment": "Left"
                        },
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Teams}",
                            "Source": "{Item.Driver.InGameName}",
                            "Foreground": "{BackgroundDefault}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 16
                        }
                    ]
                }
            ]
        },
        {
            "BlockType": "image",
            "Height": 125,
            "MarginLeft": 10,
            "ImageOptions": {
                "Path": "{Item.Team.LogotypePath}"
            }
        },
        {
            "BlockType": "text",
            "HeightPercent": 100,
            "Width": 125,
            "RenderIf": "{Item.Team.LogotypePath, Converter=EmptyObjectToTrue}",
            "VerticalAlignment": "Center",
            "HorizontalAlignment": "Center",
            "Source": "{Item.Team.Abbreviation}",
            "FontSize": 30,
            "FontName": "{FontNameWide}",
            "MarginLeft": 10
        },
        //driver
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Background": "{BackgroundDefault}",
            "VerticalAlignment": "Center",
            "Width": 215,
            "Height": 115,
            "PaddingTop": 10,
            "Items": [
                {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "Padding": "17,20,17,20",
                    "Items": [
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Source": "{Item.Driver.Name}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 18
                        },
                        {
                            "BlockType": "image",
                            "PaddingTop": 2,
                            "Height": "25",
                            "ImageOptions": {
                                "Path": "{Item.Driver.Nationality.LogotypePath}",
                                "VerticalAlignment": "Center"
                            }
                        },
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Source": "Racing",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 14,
                            "Foreground": "#808080"
                        },
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Source": "FULL SEASON",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 14,
                            "Foreground": "#808080",
                            "Triggers": [
                                {
                                    "Condition": "{Item.IsReserve}",
                                    "Property": "Source",
                                    "Value": "Reserve"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}