{
    "ComponentName": "driver_card",
    "BlockType": "stack",
    "MaxWidth": 850,
    "Items": [
        //number
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Background": "{HeadMain}",
            "RenderIf": "{ShowDriverNumber}",
            "Triggers": [
                {
                    "Condition": "{TeamSameNumber}",
                    "ConditionAnd": "<isReserveReverse>",
                    "Setters": [
                        {
                            "Property": "RenderIf",
                            "Value": "{Item.SeatPosition, Converter=NumberEquals, Parameter=1}"
                        },
                        {
                            "Property": "MarginRight",
                            "Value": 0
                        }
                    ]
                }
            ],
            "Height": 125,
            "Width": 110,
            "VerticalAlignment": "Center",
            "Items": [
                {
                    "BlockType": "text",
                    "Source": "Car",
                    "Foreground": "{BackgroundDefault}",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "FontSize": 22,
                    "MarginTop": 20,
                    "PaddingTop": 15
                },
                {
                    "BlockType": "text",
                    "Source": "{Item.Driver.RaceNumber}",
                    "Foreground": "{BackgroundDefault}",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "FontSize": 46,
                    "PaddingTop": 5
                }
            ],
        },
        //stats
        {
            "BlockType": "dock",
            "Orientation": "Vertical",
            "Background": "{HeadSecond}",
            "VerticalAlignment": "Center",
            "Height": 125,
            "Width": 215,
            "Triggers": [
                {
                    "Condition": "{TeamSameNumber}",
                    "ConditionAnd": "<isReserveReverse>",
                    "ConditionAnd": "{Item.SeatPosition, Converter=NumberGreater, Parameter=1}",
                    //"ConditionAnd": "{Item.SeatPosition, Converter=NumberIsOdd}",
                    "Property": "MarginLeft",
                    "Value": 110
                }
            ],
            "Items": [
                {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Center",
                    "Height": 67,
                    "Items": [
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Source": "{Season.LeagueInfo.LeagueName}",
                            "Foreground": "{BackgroundDefault}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 16
                        },
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Source": "",
                            "Foreground": "{BackgroundDefault}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 16,
                            "Triggers": [
                                {
                                    "Condition": "{ShowDriverClass, Converter=StringEquals, Parameter=LeagueRoles}",
                                    "Property": "Source",
                                    "Value": "{Season.MainLeagueCategory.Name}"
                                },
                                {
                                    "Condition": "{ShowDriverClass, Converter=StringEquals, Parameter=DriverFeatures}",
                                    "Property": "Source",
                                    "Value": "{Item.Driver.PrimaryDriverFeature.Name}"
                                },
                                {
                                    "Condition": "{ShowDriverClass, Converter=StringEquals, Parameter=TextBadge}",
                                    "Property": "Source",
                                    "Value": "{Item.Driver.BadgeText}"
                                }
                            ],
                            "HorizontalAlignment": "Left"
                        },
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Teams}",
                            "Source": "{Item.Driver.InGameName}",
                            "Foreground": "{BackgroundDefault}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 16
                        }
                    ]
                }
            ]
        },
        //driver img
        {
            "BlockType": "dock",
            "MarginLeft": 10,
            "Height": 125,
            "Width": 110,
            "Background": "#808080",
            "Items": [
                {
                    "BlockType": "image",
                    "Source": "{Item.Driver.LogotypePath}",
                    "Height": 150,
                    "Padding": "0,10,0,0",
                    "VerticalAlignment": "Top",
                    "HorizontalAlignment": "Center",
                    "StretchWidth": false,
                    "StretchHeight": false,
                    "Triggers": [
                        {
                            "Condition": "{Item.Driver.LogotypePath, Converter=EmptyObjectToTrue}",
                            //"Condition": "{LineupImage, Converter=StringEquals, Parameter=Team}",
                            "ConditionAnd": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Teams}",
                            "Setters": [
                                {
                                    "Property": "Source",
                                    "Value": "{Item.Team.LogotypePath}"
                                },
                                {
                                    "Property": "Padding",
                                    "Value": "15"
                                },
                                {
                                    "Property": "Height",
                                    "Value": 95
                                }
                            ]
                        },
                        {
                            "Condition": "{Item.Driver.LogotypePath, Converter=EmptyObjectToTrue}",
                            //"Condition": "{LineupImage, Converter=StringEquals, Parameter=Team}",
                            "ConditionAnd": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Cars}",
                            "Setters": [
                                {
                                    "Property": "Source",
                                    "Value": "{Item.Car.Vendor.LogotypePath}"
                                },
                                {
                                    "Property": "Padding",
                                    "Value": "20"
                                },
                                {
                                    "Property": "Height",
                                    "Value": 85
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        //team abr
        {
            "BlockType": "text",
            "Height": 125,
            "Width": 110,
            "VerticalAlignment": "Center",
            "HorizontalAlignment": "Center",
            "Source": "{Item.Team.Abbreviation}",
            "FontSize": 30,
            "FontName": "{FontNameWide}",
            "MarginLeft": 10,
            "Triggers": [
                {
                    "Condition": "{Item.Car.Vendor.LogotypePath, Converter=EmptyObjectToTrue}",
                    "ConditionOr": "{Item.Team.LogotypePath, Converter=EmptyObjectToTrue}",
                    "Property": "RenderIf",
                    "Value": false
                },
                {
                    "Condition": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Cars}",
                    "Setters": [
                        {
                            "Property": "Source",
                            "Value": "{Item.Car.Vendor.Name}"
                        },
                        {
                            "Property": "FontSize",
                            "Value": 20
                        }
                    ]
                }
            ]
        },
        //driver
        {
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Background": "{BackgroundDefault}",
            "VerticalAlignment": "Center",
            "Width": 215,
            "Height": 115,
            "PaddingTop": 10,
            "Items": [
                {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "Padding": "17,20,17,20",
                    "Items": [
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Source": "{Item.Driver.Name}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 18
                        },
                        {
                            "BlockType": "image",
                            "PaddingTop": 2,
                            "Height": "25",
                            "ImageOptions": {
                                "Path": "{Item.Driver.Nationality.LogotypePath}",
                                "VerticalAlignment": "Center"
                            }
                        },
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Source": "Racing",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 14,
                            "Foreground": "#808080"
                        },
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Source": "FULL SEASON",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 14,
                            "Foreground": "#808080",
                            "Triggers": [
                                {
                                    "Condition": "<isReserve>",
                                    "Property": "Source",
                                    "Value": "Reserve"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}