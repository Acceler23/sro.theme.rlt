{
    "ComponentName": "number_season",
    "BlockType": "canvas",
    "Width": 325,
    "Height": 125,
    "RenderIf": true,/*
    "Triggers": [
        {
            "Condition": "{TeamSameNumber}",
            "ConditionAndValue": "{Item.SeatType, Converter=EnumEquals, Parameter=Primary}",
            "ConditionAnd": "{Item.SeatPosition, Converter=NumberNotEquals, Parameter=1}",
            "Property": "RenderIf",
            "Value": false
        },
        {
            "Condition": "{ShowDriverNumber, Converter=BoolReverse}",
            "Property": "RenderIf",
            "Value": false
        }
    ],*/
    "Items": [
        {
            "BlockType": "dock",
            "RenderIf": "{ShowDriverNumber}",
            "PositionZ": 2,
            "Orientation": "Vertical",
            "BackgroundImage": "bg_lineup_number",
            "Height": 125,
            "Width": 110,
            "Items": [
                {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Source": "CAR",
                            "Foreground": "{BackgroundDefault}",
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Center",
                            "FontSize": 22,
                            "PaddingTop": 15
                        },
                        {
                            "BlockType": "text",
                            "Source": "{Item.Driver.RaceNumber}",
                            "Foreground": "{BackgroundDefault}",
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Center",
                            "FontSize": 46,
                            "PaddingTop": 5
                        }
                    ]
                }
            ]
        },
        //stats
        {
            "BlockType": "dock",
            "PositionX": 85,
            "PositionZ": 1,
            "Orientation": "Vertical",
            "BackgroundImage": "stats_bg",
            "ColorizeBackground": {
                "Color": "{darkGrey}",
                "BlendPercentage": 100,
                "ColorBlendingMode": "Normal"
            },
            "Triggers": [
                {
                    "Condition": "{ShowDriverNumber, Converter=BoolReverse}",
                    "Property": "PositionX",
                    "Value": 0
                }
            ],
            //"Background": "{darkGrey}",
            "VerticalAlignment": "Center",
            "Height": 125,
            "Width": 240,
            "Items": [
                {
                    "BlockType": "stack",
                    "Padding": "47,17,22,17",
                    "Orientation": "Vertical",
                    "VerticalAlignment": "Center",
                    "HorizontalAlignment": "Center",
                    "Height": 67,
                    "Items": [
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Source": "{Season.LeagueInfo.LeagueName}",
                            "Foreground": "{BackgroundDefault}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 16
                        },
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Width": 171,
                            //"Height": 16,
                            "MaxHeight": 35,
                            "StretchHeight": true,
                            "Source": "{Season.Name}",
                            "Foreground": "{BackgroundDefault}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 16,
                            "TextOptions": {
                                "Wrap": true
                            }
                        },
                        {
                            "BlockType": "text",
                            "PaddingTop": 2,
                            "Source": "{Item.Team.Car.CarClass.Name}",
                            "Foreground": "{BackgroundDefault}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 16,
                            "Triggers": [
                                {
                                    "Condition": "{ShowDriverClass, Converter=StringEquals, Parameter=LeagueRoles}",
                                    "Property": "Source",
                                    "Value": "{Season.MainLeagueCategory.Name}"
                                },
                                {
                                    "Condition": "{ShowDriverClass, Converter=StringEquals, Parameter=DriverFeatures}",
                                    "Property": "Source",
                                    "Value": "{Item.PrimaryDriverFeature.Name}"
                                },
                                {
                                    "Condition": "{ShowDriverClass, Converter=StringEquals, Parameter=TextBadge}",
                                    "Property": "Source",
                                    "Value": "{Item.Driver.BadgeText}"
                                }
                            ],
                            "HorizontalAlignment": "Left"
                        }
                    ]
                }
            ]
        }
    ]
}