{
    "ComponentName": "ln_driver_team",
    "BlockType": "stack",
    "Orientation": "Vertical",
    "Width": "*",
    "Items": [
        {
            "BlockType": "stack",
            "Padding": "10",
            "Orientation": "Horizontal",
            "Width": "*",
            "Items": [
                {
                    "BlockType": "image",
                    "Source": "back_main_cut",
                    "Height": 52,
                    "Colorize": {
                        "Color": "{Item.Team.Color}",
                        "ColorBlendingMode": "Normal"
                    }
                },
                {
                    "BlockType": "text",
                    "Background": "{Item.Team.Color}",
                    "PaddingTop": 10,
                    "Height": "*",
                    "Width": "*",
                    "Source": "{Item.Team.FullName, Converter=StringToUpperString}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "Foreground": "{Item.Team.SecondaryColor}",
                    "FontSize": 20
                },
                {
                    "BlockType": "image",
                    "Source": "back_main_cut",
                    "Height": 52,
                    "Colorize": {
                        "Color": "{Item.Team.Color}",
                        "ColorBlendingMode": "Normal"
                    },
                    "ImageOptions": {
                        "Rotation": 180
                    }
                }
            ]
        },
        {
            "BlockType": "itemstack",
            "ItemStackOptions": {
                "ItemSource": "{Item.Lines}",
                "Limit": 3,
                "ItemTemplate": {
                    "BlockType": "stack",
                    "Orientation": "Horizontal",
                    "Spacing": 10,
                    "RenderIf": false,
                    "Triggers": [
                        {
                            "Condition": "{Item.SeatPosition, Converter=NumberGreater, Parameter=0}",
                            "Property": "RenderIf",
                            "Value": true
                        }
                    ],
                    "Items": [
                        {
                            "BlockType": "component",
                            "Component": "number_season",
                            "RenderIf": true,
                            "Triggers": [
                                {
                                    "Condition": "{Item.Index, Converter=NumberGreater, Parameter=0}",
                                    "ConditionAnd": "{TeamSameNumber}",
                                    "Property": "RenderIf",
                                    "Value": false
                                }
                            ]
                        },
                        {
                            "BlockType": "component",
                            "Component": "driver_image_info"
                        }
                    ]
                }
            }
        },
        {
            "BlockType": "itemstack",
            "Padding": "10",
            "Triggers": [
                {
                    "Condition": "{TeamSameNumber}",
                    "Property": "ItemStackOptions.Limit",
                    "Value": 4
                }
            ],
            "ItemStackOptions": {
                "ItemSource": "{Item.Lines}",
                "IndexStart": 3,
                "Limit": 3,
                "ItemTemplate": {
                    "BlockType": "stack",
                    "Orientation": "Horizontal",
                    "Spacing": 20,
                    "RenderIf": false,
                    "Triggers": [
                        {
                            "Condition": "{Item.SeatPosition, Converter=NumberGreater, Parameter=3}",
                            "Property": "RenderIf",
                            "Value": true
                        }
                    ],
                    "Items": [
                        {
                            "BlockType": "component",
                            "Component": "number_season",
                            "RenderIf": true,
                            "Triggers": [
                                {
                                    "Condition": "{TeamSameNumber}",
                                    "Property": "RenderIf",
                                    "Value": false
                                }
                            ]
                        },
                        {
                            "BlockType": "component",
                            "Component": "driver_image_info"
                        }
                    ]
                }
            }
        },
        {
            "BlockType": "itemstack",
            "Padding": "10",
            "Triggers": [
                {
                    "Condition": "{TeamSameNumber}",
                    "Property": "ItemStackOptions.Limit",
                    "Value": 4
                }
            ],
            "ItemStackOptions": {
                "ItemSource": "{Item.Lines}",
                "IndexStart": 6,
                "Limit": 3,
                "ItemTemplate": {
                    "BlockType": "stack",
                    "Orientation": "Horizontal",
                    "Spacing": 20,
                    "RenderIf": false,
                    "Triggers": [
                        {
                            "Condition": "{Item.SeatPosition, Converter=NumberGreater, Parameter=6}",
                            "Property": "RenderIf",
                            "Value": true
                        }
                    ],
                    "Items": [
                        {
                            "BlockType": "component",
                            "Component": "number_season",
                            "RenderIf": true,
                            "Triggers": [
                                {
                                    "Condition": "{TeamSameNumber}",
                                    "Property": "RenderIf",
                                    "Value": false
                                }
                            ]
                        },
                        {
                            "BlockType": "component",
                            "Component": "driver_image_info"
                        }
                    ]
                }
            }
        }
    ]
}